# Twitch credentials
TWITCH_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_oauth_token
# Optional client ID and secret (primarily for API calls, may not work with all chat functionality)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
# Multiple channels - comma separated list (no spaces)
TWITCH_CHANNELS=your_channel_name,another_channel,third_channel

# Rate limiting (messages per minute)
RATE_LIMIT_MESSAGES=20
RATE_LIMIT_TRANSLATIONS=10

# Translation cache settings
CACHE_SIZE=100
CACHE_TTL=3600000

# Channel config directory
CONFIG_DIR=./channel_configs

# Set to 'true' to enable debug mode
DEBUG=false 